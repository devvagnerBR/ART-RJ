generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {

    id String @id 
    username String @unique @db.VarChar(20)
    password String
    email String @unique
    role Role  @default(USER)
    created_at DateTime @default(now())
    birthday String
    status Boolean @default(false)

    @@map("user")
    
}


enum Role {
  USER
  ADMIN
}
